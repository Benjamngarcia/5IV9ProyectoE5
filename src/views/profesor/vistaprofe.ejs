<%if (loginprof === true) {%>
    <!DOCTYPE html>
    <html lang="en">
    
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="widtr=device-widtr, initial-scale=1.0">
        <title>Centro Educativo Gandhi</title>
            <!-- ÍCONO -->
            <link rel="icon" href="/img/icon.png">
            <!-- CSS -->
            <link rel="stylesheet" href="/css/styles.css">
            <link rel="stylesheet" href="/css/vistasdirec.css">
            <!-- BOOTSTRAP 5 -->
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
                integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <!-- FONT AWESOME -->
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
            <!-- SWEET ALERT -->
            <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
            <!-- LANDING PAGE JS -->
            <script src="/js/validaciones.js"></script>
    </head>
    <body>
        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar navbar-dark fixed-top navbar-color p-2"  style="background-color: #072f4e;" id="menu">
            <a class="navbar-brand" href="/escuela/VistaDirec">Centro Educativo Gandhi</a>
            <button class="navbar-toggler pl-3 pr-3" id="navbar-toggle-menu" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/escuela/VistaDirec"><i class="fas fa-user"></i>  <%= data.nom_prof %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </nav>
    <!-- BODY -->
        <h3 class="text-center mt-5 pt-3" id="alumn">BUSCAR POR GRUPO</h3>
                <p class="input-view-group text-center">
                    <input type="text" placeholder="Grupo" name="grupo" id="grupo" required>
                    <button type="submit" class="search-button"><i class="fas fa-search"></i></button>
                </p>
                <div class="col-md-10 col-sm-12 m-auto">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <td>Grupo</td>
                                <td>Matrícula</td>
                                <td>Nombre</td>
                                <td>Apellido</td>
                                <td>Encuesta</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (info) { %>
                                <% for(var i = 0; i < info.length; i++) { %>
                                    <tr>
                                        <td><%= info[i].grupo_alum %></td>
                                        <td><%= info[i].matricula_alum %></td>
                                        <td><%= info[i].nom_alum%></td>
                                        <td><%= info[i].appat_alum%></td>
                                        <td><%= info[i].resultado_enc %></td>
                                        <td>
                                            <a href="/escuela/VerInfo/<%= info[i].matricula_alum%>" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                            <a href="/escuela/RegistrarTutor/<%= info[i].id_alum%>" class="btn btn-warning text-white"><i class="fas fa-child"></i></a>
                                            <a href="/escuela/DeleteAlum/<%= info[i].id_alum %>" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                            <a href="/escuela/EditAlum/<%= info[i].id_alum %>" class="btn btn-success"><i class="fas fa-edit"></i></a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
    <!-- FOOTER -->
    <%- include ('../partials/_footerCopy') %>
</html>
<%} else {%>
    <%- include ('../partials/erroracceso') %>
<%}%>