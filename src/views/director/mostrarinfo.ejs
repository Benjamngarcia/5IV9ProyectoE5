                    <b>Calle: </b><%=info[i].calle%>
                    <br>
                    <b>Colonia: </b><%=info[i].colonia%>
                    <br>
                    <b>Código Postal: </b><%=info[i].codigop%>
                    <br>
                    <b>Alcaldía: </b><%=info[i].alcaldia%>
                </div>
            </div>
        </div>
        <% } %>
        <% } %>
</div>
<div class="row justify-content-center mx-auto">
    <div class="col-md-8 col-sm-12">
        <h3 class="text-center mt-5" id="alumn">HISTORIAL DE ENCUESTAS</h3>
                <div class="col-md-10 col-sm-12 m-auto">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <td>Nombre</td>
                                <td>Apellido</td>
                                <td>Encuesta</td>
                                <td>Fecha</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (historial) { %>
                                <% for(var i = 0; i < historial.length; i++) { %>
                                    <tr>
                                        <td><%= historial[i].nom_alum%></td>
                                        <td><%= historial[i].appat_alum%></td>
                                        <td><%= historial[i].resultado_enc %></td>
                                        <td><%= historial[i].fecha_enc %></td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <%- include ('../partials/_footerCopy') %>
