<%if (logindirec===true) {%>
    <%- include ('../partials/_headerVistaDirec') %>
        <div class="container-xl text-center">
            <!-- BODY -->
                <div class="row mx-auto justify-content-center mt-3">
                    <div class="col-md-6 col-sm-12 p-4 mt-5">
                        <div class="card pl-3 pr-3 pt-4 pb-4">
                            <h1 class="text-center">CENTRO EDUCATIVO GANDHI</h1>
                            <h3 class="mb-3">Bienvenido de nuevo director <%= data.appat_direc %></h3>
                            <div class="row justify-content-center">
                                <form action="/escuela/EnviarCorreo" id="enviarcorreo" class="col-md-6" method="POST">
                                    <div class="save-buttons">
                                        <a type="button" onclick="document.getElementById('enviarcorreo').submit()" class="btn-especial p-2 text-light w-100">ENVIAR ALERTA</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="save-buttons">
                    <a href="" type="button" class="btn-especial p-2" data-toggle="modal" data-target="#exampleModalCenter">REGISTRAR ALUMNO</a>
                    <a href="" type="button" class="btn-especial p-2" data-toggle="modal" data-target="#exampleModalCenter1">REGISTRAR PROFESOR</a>
                </div>
                <!-- REGISTRO ALUMNO -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header" style="background-color: #072f4e;">
                                <h5 class="modal-title" id="exampleModalLongTitle" style="color: #F5F2F3;">REGISTRAR ALUMNO</h5>
                                <button type="button" class="close" data-dismiss="modal" style="color: #F5F2F3;" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <!-- REGISTRO ALUMN -->
                            <div class="modal-body">
                                <form action="/RegistroAlumno" method="POST">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" name="nom_alum" id="nom_alum"
                                                placeholder="Nombre">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" name="appat_alum" id="appat_alum"
                                                placeholder="Apellido paterno">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" name="apmat_alum" id="apmat_alum"
                                                placeholder="Apellido materno">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="email" class="form-control" name="correo_alum" id="email"
                                                placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" name="grupo_alum" id="grupo_alum"
                                                placeholder="Grupo">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="phone" class="form-control" name="telefono_alum" id="telefono_alum"
                                                placeholder="Teléfono">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="cumple_alum">Nacimiento:</label>
                                            <input type="date" class="form-control" name="cumple_alum" id="cumple_alum">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="fecha_ins">Fecha Inscripción</label>
                                            <input type="date" class="form-control" name="fecha_ins" id="fecha_ins">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6 text-center mx-auto">
                                            <button type="button" class="btn-especial p-2" onclick="generate()">GENERAR
                                                DATOS</button>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" name="matricula_alum" id="matricula_alum"
                                                placeholder="Matrícula" readonly>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" name="pass_alum" id="pass_alum"
                                                placeholder="Contraseña" readonly>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6 text-center mx-auto">
                                            <button type="submit" class="btn-especial p-2">REGISTRAR</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                <button class="btn btn-success">Aceptar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- REGISTRO PROF -->
                <div class="modal fade" id="exampleModalCenter1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header" style="background-color: #072f4e;">
                                <h5 class="modal-title" id="exampleModalLongTitle" style="color: #F5F2F3;">REGISTRAR PROFESOR</h5>
                                <button type="button" class="close" data-dismiss="modal" style="color: #F5F2F3;" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="/RegistroProf" method="POST" onsubmit="return validarRegistroTeach();">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="nombre" name="nom_prof"
                                                placeholder="Nombre">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="appat" name="appat_prof"
                                                placeholder="Apellido paterno">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="apmat" name="apmat_prof"
                                                placeholder="Apellido materno">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="phone" class="form-control" id="telefono" name="telefono_prof"
                                                placeholder="Teléfono">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="calle" name="calle_prof"
                                                placeholder="Calle">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="colonia" name="colonia_prof"
                                                placeholder="Colonia">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="codigop" name="codigop_prof"
                                                placeholder="Codigo Postal">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="alcaldia" name="alcaldia_prof"
                                                placeholder="Alcaldia">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="rfc" name="rfc_prof"
                                                placeholder="RFC">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="text" class="form-control" id="nss" name="nss_prof"
                                                placeholder="NSS">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <input type="email" class="form-control" id="emailprof" name="correo_prof"
                                                placeholder="Correo electrónico">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <input type="password" class="form-control" id="pass_prof"
                                                name="pass_prof" placeholder="Contraseña">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6 text-center mx-auto">
                                            <button type="submit" class="btn-especial p-2">REGISTRAR</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                <button type="button" class="btn btn-success">Aceptar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- POR GRUPO --> 
                <div class="col-md-10 col-sm-12 m-auto">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <td>Grupo</td>
                                <td>Matrícula</td>
                                <td>Nombre</td>
                                <td>Apellido</td>
                                <td>Encuesta</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (info) { %>
                                <% for(var i = 0; i < info.length; i++) { %>
                                    <tr id="fila_enc">
                                        <td><%= info[i].grupo_alum %></td>
                                        <td><%= info[i].matricula_alum %></td>
                                        <td><%= info[i].nom_alum%></td>
                                        <td><%= info[i].appat_alum%></td>
                                        <td><%= info[i].resultado_enc %></td>
                                        <td>
                                            <a href="/escuela/VerInfo/<%= info[i].matricula_alum%>" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                            <a href="/escuela/RegistrarTutor/<%= info[i].id_alum%>" class="btn btn-warning text-white"><i class="fas fa-child"></i></a>
                                            <a href="/escuela/DeleteAlum/<%= info[i].id_alum %>" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                            <a href="/escuela/EditAlum/<%= info[i].id_alum %>" class="btn btn-success"><i class="fas fa-edit"></i></a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
        </div>
        <script src="/js/tablas.js"></script>
        <script src="/js/generador.js"></script>
        <%- include ('../partials/_footerCopy') %>
<%} else {%>
    <%-include('../partials/erroracceso')%>
    <%}%>